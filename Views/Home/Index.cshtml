@{
    ViewData["Title"] = "Subir Archivos Excel";
}

<h2>Subir Archivos Excel</h2>

<form asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label for="archivosExcel" class="form-label">Seleccione uno o más archivos Excel</label>
        <input type="file" name="archivosExcel" id="archivosExcel" multiple accept=".xls,.xlsx" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Procesar</button>
</form>

@if (ViewData["Telas"] != null)
{
    var telas = (List<Zenko.Models.TelaExcel>)ViewData["Telas"];
    <h3>Telas encontradas</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Costo por Metro</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tela in telas)
            {
                <tr>
                    <td>@tela.Codigo</td>
                    <td>@tela.CostoPorMetro.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (ViewData["Avios"] != null)
{
    var avios = (List<Zenko.Models.AvioExcel>)ViewData["Avios"];
    <h3>Avíos encontrados</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Código</th>
                <th>Costo por Unidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var avio in avios)
            {
                <tr>
                    <td>@avio.Codigo</td>
                    <td>@avio.CostoUnidad.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
