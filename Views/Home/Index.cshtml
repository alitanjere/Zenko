@{
    ViewData["Title"] = "Inicio";
}

@section Styles {
    <style>
        .hero {
            background: linear-gradient(to right, #94B9FF 20%, #CDFFD8 80%);
            border-radius: 12px;
            padding: 40px;
            text-align: center;
            margin-bottom: 30px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .upload-card {
            background-color: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            max-width: 600px;
            margin: auto;
        }
    </style>
}

<div class="hero">
    <h1>Bienvenido a Zenko</h1>
    <p>Cargá tus archivos Excel de Insumos y Avíos</p>
</div>

<div class="upload-card mb-5">
    <form asp-action="UploadExcel" method="post" enctype="multipart/form-data">
        <div class="form-group mb-3">
            <label for="excelFile">Archivo Excel (Telas o Avíos)</label>
            <input type="file" name="excelFile" id="excelFile" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">Cargar y continuar</button>
    </form>
</div>
