@model IEnumerable<Zenko.Models.InsumoHistorico>
@using Zenko.Models // Para poder usar InsumoHistorico directamente si es necesario

@{
    ViewData["Title"] = "Historial de Precios de Insumos";
    string codigoConsultado = ViewData["CodigoInsumoConsultado"] as string;
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-12">
        <form asp-action="HistorialPrecios" method="get" class="form-inline mb-3">
            <div class="form-group mr-2">
                <label for="codigoInsumo" class="mr-2">Código de Insumo:</label>
                <input type="text" id="codigoInsumo" name="codigoInsumo" class="form-control" value="@codigoConsultado" placeholder="Ingrese código"/>
            </div>
            <button type="submit" class="btn btn-primary">Buscar</button>
        </form>
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(ViewData["ErrorHistorial"] as string))
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErrorHistorial"]
    </div>
}

@if (!string.IsNullOrWhiteSpace(ViewData["InfoHistorial"] as string))
{
    <div class="alert alert-info" role="alert">
        @ViewData["InfoHistorial"]
    </div>
}

@if (Model != null && Model.Any())
{
    <h4>Resultados para: @(Model.First().CodigoInsumo) (@(Model.First().NombreTipoInsumo))</h4>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Fecha de Cambio (a Histórico)</th>
                <th>Costo Anterior</th>
                <th>ID Subida</th>
                <th>Fecha Subida Archivo</th>
                <th>Nombre Archivo Original</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FechaCambio.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@item.CostoAnterior?.ToString("C")</td>
                    <td>@item.IdSubida</td>
                    <td>@item.FechaSubida.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@item.NombreArchivoOriginal</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (!string.IsNullOrWhiteSpace(codigoConsultado) && ViewData["ErrorHistorial"] == null && ViewData["InfoHistorial"] == null)
{
    <div class="alert alert-warning" role="alert">
        No se encontró historial para el código de insumo: <strong>@codigoConsultado</strong>.
    </div>
}

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a Carga de Precios</a>
</div>
