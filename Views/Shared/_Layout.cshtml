<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zenko</title>
    <link rel="stylesheet" href="~/css/Layout.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("Styles", required: false) <!-- Esto evita el error si la vista no define la sección -->
</head>
<body>
    <nav class="navbar navbar-light bg-light px-4 d-flex justify-content-between align-items-center">
        <a class="navbar-brand fs-3 fw-bold" href="#">Zenko</a>
        <div>
            <img src="~/img/Zenko.png" alt="Logo Zenko" style="height: 80px;" />
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>
</body>
</html>
